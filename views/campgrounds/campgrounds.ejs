
<% include ../partials/header %>




<div class="container">
  
<div class="jumbotron">
 <h1>
Welcome to Yelpcamp
  </h1>
  <p>
     View our Campgrounds. We are all over the world. 
   </p>
  <a class="btn btn-primary" href="/campgrounds/new"> Add a Campground</a>
 </div>

<div class="row">
   <div class="col-lg-12">
     <h3>
       Our most popular Campgrounds 
     </h3>
  </div>
   </div>
<div class="row">
     <%  campgrounds.forEach(function(camp) { %>
     <div class="col-md-3 col-sm-6">

    <div class="thumbnail">
    <img src="<%=camp.image %>">
          <div class="caption text-center">
       <%=camp.name %>
      
       <p><a href="/campgrounds/<%=camp.id_%>" class="btn btn-sm btn-primary"> View More </a> </p>
         </div>
    </div>

     </div>
<% }); %>
 
 
  </div>

<% include ../partials/footer %>